MDScreen:
    md_bg_color:51/255,153/255,255/255,1
    MDBoxLayout:
        orientation:'vertical'
        MDBoxLayout:
            size_hint_y:.15
            padding:dp(25)
            MDBoxLayout:
                orientation:"vertical"
                MDLabel:
                    text:"Fit Chat"
                    font_style:"H4"
                    text_color:'white'
                MDBoxLayout:
                    adaptive_size:True
                    spacing:dp(10)
                    MDLabel:
                        text:"Profile Page"
                        text_size:None,None
                        adaptive_width:True
                    MDIcon:
                        icon:'chevron-down'

            MDIconButton:
                icon:""
        MDGridLayout:
            size_hint_y:.60
            cols:2
            padding:[dp(15),dp(15),dp(15),dp(35)]
            spacing:dp(15)
            ElementCard:
                icon: 'account'
                text:"Profile Picture"
                subtext:""
                items_count:""

            ElementCard:
                image:""
                text:""
                subtext:""
                items_count:""

            ElementCard:
                image:""
                text:""
                subtext:""
                items_count:""

            ElementCard:
                image:""
                text:""
                items_count:""
                subtext:""

        BoxLayout:
            orientation: 'vertical'
            size_hint_y:.15
            cols:3

            MDBottomAppBar:
                title: "Bottom Navbar"
            MDBottomNavigation:
                #colors

                MDBottomNavigationItem:
                    name: "screen 1"
                    text: "Home Page"
                    icon: 'home'

                    MDLabel:
                        text: "Home Page"
                        halign: 'center'

                MDBottomNavigationItem:
                    name: "screen 2"
                    text: "Matching"
                    icon: 'account-multiple-plus'

                    MDLabel:
                        text: "Matching"
                        halign: 'center'

                MDBottomNavigationItem:
                    name: "screen 3"
                    text: "Profile"
                    icon: 'account'

                    MDLabel:
                        text: "Profile"
                        halign: 'center'



<ElementCard@MDCard>:
    md_bg_color:102/255,178/255,255/255, 1
    padding:dp(15)
    spacing:dp(15)
    radius:dp(25)
    ripple_behavior: True
    image:''
    text:""
    items_count:""
    subtext:''

    orientation:'vertical'
    Image:
        source:root.image
    MDBoxLayout:
        orientation:'vertical'
        MDLabel:
            halign:"center"
            text:root.text
            font_style:"H6"
        MDLabel:
            halign:"center"
            font_style:"Caption"
            text:root.subtext
        MDLabel:
            halign:"center"
            text:root.items_count

